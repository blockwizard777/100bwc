{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react-jsx"
  },
  "include": [
    "server/**/*.ts",
    "client/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}